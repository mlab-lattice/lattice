{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "kube-apiserver"
  },
  "spec": {
    "hostNetwork": true,
    "containers": [
      {
        "name": "kube-apiserver",
        "image": "gcr.io/google_containers/hyperkube:v1.9.0",
        "command": [
          "/hyperkube",
          "apiserver",
          "--admission-control=NamespaceLifecycle,LimitRanger,ServiceAccount,DefaultStorageClass,ResourceQuota,",
          "--allow-privileged=true",
          "--anonymous-auth=false",
          "--cloud-provider=aws",
          "--etcd-servers=http://localhost:2379",
          "--tls-cert-file=/etc/kube-apiserver/kubernetes.pem",
          "--tls-private-key-file=/etc/kube-apiserver/kubernetes-key.pem",
          "--service-cluster-ip-range=10.32.0.0/24",
          "--service-node-port-range=30000-32767",
          "--token-auth-file=/etc/kube-apiserver/known_tokens.csv",
          "--v=2"
        ],
        "ports": [
          {
            "name": "https",
            "hostPort": 6443,
            "containerPort": 6443
          },
          {
            "name": "local",
            "hostPort": 8080,
            "containerPort": 8080
          }
        ],
        "volumeMounts": [
          {
            "name": "etc-kube-apiserver",
            "mountPath": "/etc/kube-apiserver",
            "readOnly": true
          }
        ],
        "livenessProbe": {
          "httpGet": {
            "scheme": "HTTP",
            "host": "127.0.0.1",
            "port": 8080,
            "path": "/healthz"
          },
          "initialDelaySeconds": 15,
          "timeoutSeconds": 15
        }
      }
    ],
    "volumes": [
      {
        "name": "etc-kube-apiserver",
        "hostPath": {
          "path": "/etc/opt/kubernetes/apiserver"
        }
      }
    ]
  }
}
